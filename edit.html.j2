{% extends 'layouts/wrapper.html.j2' %}

{% block content %}
    <h3>{{sales.id}}</h3>
    <form method="POST" action="">

        <div class="mb-3">
            <label for="commission-rate" class="form-label">Commission Rate</label>
            <div class="input-group">
                <input class="form-control" id="commission-rate" name="commission-rate"value="{{sales.commission_rate}}" required>
                <span class="input-group-text">%</span>
            </div>
        </div>

        <div class="mb-3">
            <label for="tax-rate" class="form-label">Tax Rate</label>
            <div class="input-group">
                <input class="form-control" id="tax-rate" name="tax-rate" value="{{sales.tax_rate}}" required>
                <span class="input-group-text">%</span>
            </div>
        </div>

        
        <div class="mb-3">
            <label for="tax-rate" class="form-label">Description</label>
            <div class="input-group">
                <input class="form-control" id="description" name="description" value="{{sales.description}}" required>
                <span class="input-group-text">%</span>
            </div>
        </div>
<div class="d-flex gap-2 mt-3">
    <button class="btn btn-primary" type="submit">Update</button>
    {% if msg %}
  <div class="alert alert-success">{{ msg }}</div>
{% endif %}

</div>
</form>

{% endblock content %}
