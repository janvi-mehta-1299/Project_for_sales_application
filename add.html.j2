{% extends 'layouts/wrapper.html.j2' %}

{% block content %}
    <h3>Add a new sale</h3>
    <form method="post" action="/add-sale">
        <div class="mb-3">
            <label for="total-cost" class="form-label">Total Cost</label>
            <input class="form-control" id="total-cost" name="total-cost" required>
        </div>

        <div class="mb-3">
            <label for="commission-rate" class="form-label">Commission Rate</label>
            <div class="input-group">
                <input class="form-control" id="commission-rate" name="commission-rate" required>
                <span class="input-group-text">%</span>
            </div>
        </div>

        <div class="mb-3">
            <label for="tax-rate" class="form-label">Tax Rate</label>
           <input list="rates" id="commissionRate" name="commissionRate" placeholder="Enter commission (e.g., 5%)">
<datalist id="rates">
  <option value="5%">
  <option value="18%">
</datalist>
            </div>
        </div>

        
        <div class="mb-3">
            <label for="tax-rate" class="form-label">Description</label>
            <div class="input-group">
                <input class="form-control" id="description" name="description" required>
            </div>
        </div>
<div class="d-flex gap-2 mt-3">
    <button class="btn btn-primary" type="submit">Submit</button>
    </form>
     <form action="/list_sales" method="get">
        <button class="btn btn-secondary" type="submit">Show Sales Data</button>
    </form>
</div>
{% if msg %}
  <div class="alert alert-success">New sale created Successfully</div>
{% endif %}
{% endblock content %}
